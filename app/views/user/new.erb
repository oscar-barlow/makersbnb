<h2 class="sign-up-heading">Sign Up</h2>


<form action="/user" method="post">
  <div class="form-group">
  <label for="username">Username</label>
  <input type="text" name="username" size="30" placeholder="Please enter user name" required/>
  </div>
  <div class="form-group">
  <label for="email">Email</label>
  <input type="email" name="email" size="30" placeholder="Please enter email" required/>
  </div>
  <div class="form-group">
  <label for="password">Password</label>
  <input type="password" name="password" size="30" placeholder="Please enter password" required/>
  </div>

  <input type="submit" value="Sign Up"/>
</form>
