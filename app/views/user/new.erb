<h2>Sign Up</h2>

<form action="/user" method="post">
  <lable for="username">Username</lable>
  <input type="text" name="username" placeholder="Please enter user name" required/>
  <lable for="email">Email</lable>
  <input type="email" name="email" placeholder="Please enter email" required/>
  <lable for="password">Password</lable>
  <input type="password" name="password" placeholder="Please enter password" required/>
  <input type="password" name="password_confirmation"  placeholder="Please confirm password" required>
  <input type="submit" value="Sign Up"/>
</form>
